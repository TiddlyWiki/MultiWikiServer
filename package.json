{
  "name": "@tiddlywiki/mws",
  "description": "TiddlyWiki Multiple Wiki Server",
  "private": false,
  "version": "0.0.16",
  "type": "module",
  "exports": {
    "types": "./src/server.ts",
    "require": "./dist/server.cjs",
    "import": "./dist/server.js"
  },
  "files": [
    "dist",
    "prisma",
    "react-user-mgmt",
    "tiddlywiki-types",
    "editions/mws-docs",
    "plugins/client",
    "libsql",
    "libsql-android-arm64",
    ".env-cmdrc"
  ],
  "engines": {
    "node": ">14"
  },
  "scripts": {
    "start": "SKIPDTS=1 npm run build && node mws.dev.mjs",
    "docs": "ENABLE_DOCS_ROUTE=1 npm start",
    "certs": "(cd runtime-config && bash localhost_certs.sh)",
    "tsc": "tsc -p tsconfig.json --skipLibCheck",
    "build": "npm run tsc && tsup",
    "install-android": "GYP_DEFINES=\"android_ndk_path=''\" npm install",
    "postinstall": "env-cmd -e prisma-env prisma generate",
    "env": "env",
    "test:pack": "(git clean -dfx tests && npm pack --pack-destination tests && cd tests && npm install && npm install ./tiddlywiki-mws-$npm_package_version.tgz --no-save && npm test)",
    "test": "(git clean -dfx tests && cd tests && npm install .. --no-save && npm test)",
    "fulltest": "mv node_modules node_modules_old; npm run test:pack; mv node_modules_old node_modules",
    "prepublishOnly": "npm run build && node mws.dev.mjs --client-build"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "6.7.0-dev.48",
    "@prisma/client": "6.6.0",
    "@serenity-kit/opaque": "^0.8.4",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.13.1",
    "@types/send": "^0.17.4",
    "@types/sjcl": "^1.0.34",
    "@types/tiddlywiki": "file:tiddlywiki-types",
    "env-cmd": "^10.1.0",
    "prisma": "6.6.0",
    "source-map-support": "^0.5.21",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "commander": "^13.1.0",
    "esbuild": "0.25.2",
    "mime-types": "^2.1.35",
    "send": "^1.1.0",
    "sjcl": "^1.0.8",
    "tiddlywiki": "^5.1.22",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "tiddlywiki": "^5.1.22"
  }
}