{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "types": [
      "node",
    ],
    "lib": [
      "es2020"
    ],
    "target": "es2020",

    "module": "CommonJS", 
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true, 
    "strictNullChecks": true, 
    "noImplicitThis": true,
    "noImplicitReturns": true, 
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true, 
    "checkJs": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/oldroutes/**/*",
    "src/commands-old/**/*",
    "src/routes/handlers/**/*",
    "src/store/**/*",
  ]
}