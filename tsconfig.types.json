{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    // "module": "es2020",
    // "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    // emit the declarations as a single file
    "outFile": "./dist/types",
    // this just catches mistakes
    "outDir": "./dist/types",
    "allowJs": true,
    "checkJs": true,
    "types": [],
  },
}